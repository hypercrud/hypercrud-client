(ns hyperfiddle.ui.loading
  (:require
    [hyperfiddle.domain]))


(defn logo
  [props]
  [:div.hyperfiddle-logo props
   [:div.hyperfiddle-logo-square]
   [:div.hyperfiddle-logo-square {:delay "true"}]])

(defn page [domain & children]
  [:div.loading-page
   [:div.logo-callout
    (logo {:animate "true"})
    #_[:img {:src
             #_(hyperfiddle.domain/api-path-for domain :public/static-resource :build ... :resource-name "logo.png")
             "data:image/png;base64,"}]
    #_[:span.brand ":hyperfiddle"]
    (when children
      (into [:div.additional-content] children))]])
